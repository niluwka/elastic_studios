-var icons = ['be', 'facebook', 'instagram']
-var contacts = [{ info:'(234) 305-738-8420', icon: 'phone'}, {info:'1287 Steve Hunt Road, Florida', icon: 'map'},{info: 'info@elastic-studios.com', icon: 'mass'}]
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./style/main.min.css")
        title Document
    body
        include view/components/header.pug
        main.contact
            .contact__container
                .contact__content
                    .contact__content-inscription
                        .contact__content-img
                            img(src="images/elastic_studios.webp", alt="")
                        .contact__content-icons
                             ul.contact__content-list
                                each icon in icons 
                                    li.main__list-item
                                        a.main__list-link(href="#")
                                            i(class= 'icon-' + icon)
                    .contact__content-form
                        h2.contact__content-title Contact-us
                        form(action="").form
                            .form__item
                                label(for="form-name") Name
                                input(type="text" id="form-name"  required placeholder="Enter your name")
                            .form__item
                                label(for="form-email") Email Address
                                input(type="email" id="form-email" required placeholder="Enter your email addres")
                            .form__item
                                label(for="form-mass") Message
                                textarea(name="", cols="30", rows="10" id="form-mass" required placeholder="Enter your message here")
                            .form__item
                                p.form__info We will get back to you within one business day
                                button(type="Submit").form__button Submit
                            ul.form__contact
                                each contact in contacts 
                                    li.form__contact-item
                                        a.form__contact-link(href="#")= contact.info
                                            i(class= 'icon-' + contact.icon)
                            
            
        
        script(src="./script/common.js")